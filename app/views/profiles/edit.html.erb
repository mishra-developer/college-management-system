<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Update Profile</h2>

      <%= form_with(
            scope: :user,
            model: @user,
            url: profile_path(@user),
            method: :patch,
            local: true,
            html: { class: "card p-4 shadow" }
          ) do |f| %>

        <div class="mb-3">
          <%= f.label :avatar, "Profile Photo", class: "form-label" %>
          <%= f.file_field :avatar, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :first_name, "First Name", class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :last_name, "Last Name", class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :phone_number, "Phone Number", class: "form-label" %>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :address, "Address", class: "form-label" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>

        
        <div class="text-center">
          <%= f.submit "Update Profile", class: "btn btn-primary w-100  m-b" %>
        </div>
        <div class="text-center mt-2">
          <%=link_to "Cancel",leave_requests_path, class: "btn btn-danger block w-100 ",  aria: { label: 'Cancel' }  %>
        </div>

      <% end %>
    </div>
  </div>
</div>
